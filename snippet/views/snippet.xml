<odoo>
    <template id="s_employee" name="employee">
        <section class="container dynamic_snippet_employee">
            <div id="temp_data"/>
        </section>
    </template>

    <!-- Snippets menu -->
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//t[@id='snippet_donation_hook']" position="after">
            <t t-snippet="snippet.s_employee" string="Employee" />
        </xpath>
    </template>

    <!-- Options -->
    <template id="external_snippets_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="EmployeeSnippetOptions" data-selector=".dynamic_snippet_employee"> 
                <we-checkbox string="Department" data-no-preview="true" data-show-confirm="true" data-attribute-name="showConfirm" data-select-data-attribute="true" data-toggle-option="true"/>
            </div>
        </xpath>
    </template>

</odoo>